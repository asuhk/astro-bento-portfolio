---
interface Props {
  title?: string;
  body?: string;
  class?: string; // Add the 'class' prop here
}

const { title, body, class: className } = Astro.props; // Destructure with alias 'className'
---

<>
  {title && <h2 class={`text-xl font-bold m-0 z-20 text-black ${className}`}>{title}</h2>}
  {body && <p class={`m-0 font-light text-base flex flex-col text-black ${className}`}>{body}</p>}
  <slot />
</>